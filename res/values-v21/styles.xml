<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:colorPrimary">@color/light_blue</item>
        <item name="android:colorAccent">@color/dark_blue</item>
        <item name="android:colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/statusBarColor</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:colorAccent">@color/dark_blue</item>
        <item name="android:colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLogin</item>
        <item name="android:navigationBarColor">@color/loginBackgroundColor</item>
        <item name="android:colorPrimary">@color/statusBarColor</item>
        <item name="android:windowBackground">@color/loginBackgroundColor</item>
    </style>
    <style name="PrefsTheme" parent="@style/AppTheme"/>
    <style name="ImageViewerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="messageTxt">
        <item name="android:imeOptions">flagNoExtractUi|actionSend</item>
    </style>
    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />
    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textColor">#000</item>
    </style>
</resources>